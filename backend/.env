# Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db
DB_USER=postgres
DB_PASSWORD=your_password

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key
JWT_REFRESH_EXPIRES_IN=30d

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@seudominio.com.br
EMAIL_FROM_NAME=Seu App

# Frontend URLs
FRONTEND_URL=http://localhost:5173
RESET_PASSWORD_URL=http://localhost:5173/reset-password
VERIFY_EMAIL_URL=http://localhost:5173/verify-email

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
TOKEN_EXPIRY_HOURS=24
SESSION_EXPIRY_DAYS=7

# LGPD
COMPANY_NAME=Sua Empresa Ltda
COMPANY_CNPJ=00.000.000/0000-00
COMPANY_ADDRESS=Rua Exemplo, 123 - Cidade/Estado
DPO_NAME=Nome do DPO
DPO_EMAIL=dpo@seudominio.com.br
DPO_PHONE=(00) 0000-0000

